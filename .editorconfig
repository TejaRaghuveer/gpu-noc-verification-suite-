# ==============================================================================
# EditorConfig Configuration
# NVIDIA GPU Interconnect NoC Verification
# ==============================================================================
#
# EditorConfig helps maintain consistent coding styles across different editors
# and IDEs. This file defines coding standards for the project.
#
# Usage: Most modern editors support EditorConfig automatically.
#        Install a plugin if your editor doesn't support it natively.
#
# Documentation: https://editorconfig.org/
# ==============================================================================

# ==============================================================================
# Root Configuration
# ==============================================================================
# This is the topmost EditorConfig file
root = true

# ==============================================================================
# Universal Settings (All Files)
# ==============================================================================

[*]
# Character set
charset = utf-8

# End of line: unix (LF), windows (CRLF), or lf (preferred)
end_of_line = lf

# Insert final newline at end of file
insert_final_newline = true

# Remove trailing whitespace
trim_trailing_whitespace = true

# ==============================================================================
# SystemVerilog Files (.sv, .svh)
# ==============================================================================

[*.{sv,svh}]
# Indentation: 2 spaces (no tabs)
indent_style = space
indent_size = 2

# Maximum line length (soft limit, can exceed if needed)
max_line_length = 100

# ==============================================================================
# Verilog Files (.v, .vh)
# ==============================================================================

[*.{v,vh}]
# Indentation: 2 spaces
indent_style = space
indent_size = 2
max_line_length = 100

# ==============================================================================
# VHDL Files (.vhd, .vhdl)
# ==============================================================================

[*.{vhd,vhdl}]
# Indentation: 2 spaces
indent_style = space
indent_size = 2
max_line_length = 100

# ==============================================================================
# Makefile
# ==============================================================================

[Makefile]
# Makefiles require tabs for indentation
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# ==============================================================================
# Shell Scripts (.sh, .bash)
# ==============================================================================

[*.{sh,bash}]
indent_style = space
indent_size = 2
max_line_length = 100

# ==============================================================================
# Python Files (.py)
# ==============================================================================

[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# ==============================================================================
# Configuration Files
# ==============================================================================

[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2
max_line_length = 100

# ==============================================================================
# Markdown Files (.md)
# ==============================================================================

[*.md]
# Markdown files: preserve trailing whitespace (needed for line breaks)
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
max_line_length = 100

# ==============================================================================
# YAML Files (.yaml, .yml)
# ==============================================================================

[*.{yaml,yml}]
indent_style = space
indent_size = 2
max_line_length = 100

# ==============================================================================
# JSON Files (.json)
# ==============================================================================

[*.json]
indent_style = space
indent_size = 2

# ==============================================================================
# XML Files (.xml)
# ==============================================================================

[*.xml]
indent_style = space
indent_size = 2

# ==============================================================================
# TCL Files (.tcl)
# ==============================================================================

[*.tcl]
indent_style = space
indent_size = 2
max_line_length = 100

# ==============================================================================
# C/C++ Files (.c, .cpp, .h, .hpp)
# ==============================================================================

[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2
max_line_length = 100

# ==============================================================================
# Documentation Files
# ==============================================================================

[*.{txt,rst}]
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = false

# ==============================================================================
# Git Configuration Files
# ==============================================================================

[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# ==============================================================================
# Editor-Specific Notes
# ==============================================================================
#
# VSCode/Cursor:
#   - Install "EditorConfig for VS Code" extension
#   - Settings are applied automatically
#
# Vim:
#   - Install editorconfig-vim plugin
#   - :PluginInstall editorconfig-vim
#
# Emacs:
#   - Install editorconfig-emacs package
#   - (require 'editorconfig)
#
# Sublime Text:
#   - Install EditorConfig plugin via Package Control
#
# IntelliJ IDEA / PyCharm:
#   - Built-in support (enable in Settings > Editor > Code Style)
#
# ==============================================================================

